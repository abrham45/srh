# SRH Chatbot Production Environment Configuration
# Copy this file to .env.production and update the values

# =================================
# TELEGRAM BOT CONFIGURATION
# =================================
TELEGRAM_TOKEN=your_actual_telegram_bot_token_here
# Get from @BotFather on Telegram

# =================================
# GEMINI AI CONFIGURATION  
# =================================
GEMINI_API_KEY=your_actual_gemini_api_key_here
# Get from Google AI Studio: https://makersuite.google.com/app/apikey
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent

# =================================
# DATABASE CONFIGURATION
# =================================
DB_HOST=164.92.98.189
DB_PORT=5432
DB_NAME=srh_chatbot_db
DB_USER=taskuser
DB_PASSWORD=taskpassword

# =================================
# DJANGO CONFIGURATION
# =================================
DJANGO_SETTINGS_MODULE=config.settings
DEBUG=False
SECRET_KEY=your_django_secret_key_here_make_it_long_and_random
ALLOWED_HOSTS=localhost,127.0.0.1,your-server-ip,your-domain.com

# =================================
# OPTIONAL: WEBHOOK CONFIGURATION
# =================================
# If using webhooks instead of polling (for high traffic)
# WEBHOOK_URL=https://your-domain.com/webhook
# WEBHOOK_SECRET=your_webhook_secret_token

# =================================
# LOGGING CONFIGURATION
# =================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/srh_chatbot.log

# =================================
# SECURITY SETTINGS
# =================================
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True

# =================================
# PERFORMANCE SETTINGS
# =================================
# Database connection pooling
DB_CONN_MAX_AGE=60
DB_CONN_HEALTH_CHECKS=True

# Cache settings (optional - Redis)
# CACHE_URL=redis://localhost:6379/1

# =================================
# MONITORING & ALERTS
# =================================
# Optional: Add monitoring service URLs
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
# HEALTH_CHECK_URL=your_health_check_endpoint
